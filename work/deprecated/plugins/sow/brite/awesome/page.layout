---
stencil : erb

--- html
<% resources = project.metadata.resources %>

<HTML>
<HEAD>
  <TITLE><%= project.metadata.title %></TITLE>

  <META NAME="description" CONTENT="<%= project.metadata.description %>"> 

  <LINK rel="shortcut icon" href="assets/ruby.png"/>

  <LINK type="text/css" rel="stylesheet" href="assets/reset.css" />
  <LINK type="text/css" rel="stylesheet" href="assets/custom.css" />

  <SCRIPT language="javascript" type="text/javascript" src="assets/jquery.js"></SCRIPT>
  <SCRIPT language="javascript" type="text/javascript" src="assets/highlight.js"></SCRIPT>

  <SCRIPT type="text/javascript">
    $(document).ready(function() {
      $('pre').wrapInner('<code></code>');
      hljs.tabReplace = '    ';
      hljs.initHighlightingOnLoad('ruby');
    });
  </SCRIPT>

  <LINK type="text/css" rel="stylesheet" href="assets/highlight.css" />
</HEAD>
<BODY>

<div id="header">
<div class="centered">
  <div class="title">
    <h1>
      <!-- how to handle other logo formats? -->
      <img src="assets/logo.jpg" align="absmiddle" style="height: 60px;" />
      <%= project.metadata.title %>
    </h1>
  </div>
  <div class="menu">
    <a href="index.html">Home</a>  &nbsp;
    <a href="history.html">History</a> &nbsp;
    <a href="about.html">About</a> &nbsp;
    <a href="legal.html">Legal</a> &nbsp;
    <a href="logs.html">Logs</a> &nbsp;
    &middot; &nbsp;
    <% resources.each do |label, url| %>
      <% if url %><a href="<%= url %>"><%= label.capitalize %></a> &nbsp;<% end %>
    <% end %>
  </div>
</div>
</div>

<div class="main">
<div class="centered">
<%= yield %>
</div>
</div>

<div id="footer">
<div class="centered">
  <div class="advert">
    <%= advert %>
  </div>
  <div class="copyright">
    <%= project.metadata.copyright %> <%= project.metadata.authors.first %> |
    Website generated by <a href="http://rubyworks.github.com/brite">sow brite awesome</a><br/>
  </div>
</div>
</div>

</BODY>
</HTML>
